{
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "eslint:recommended"
  ],
  "plugins": ["simple-import-sort"],
  "rules": {
    "sort-vars": "error",
    "object-curly-spacing": ["error", "always"],
    "curly": ["error", "multi", "consistent"],
    "simple-import-sort/imports": "error",
    "simple-import-sort/exports": "error"
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": "latest"
  }
}
